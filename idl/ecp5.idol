// ECP5 server IPC interface

Interface(
    name: "Ecp5",
    ops: {
        "enable": (
            doc: "Enable the device (if currently disabled)",
            reply: Result(
                ok: "()",
                err: CLike("Ecp5Error"),
            ),
        ),
        "disable": (
            doc: "Disable the device (if currently enabled)",
            reply: Result(
                ok: "()",
                err: CLike("Ecp5Error"),
            ),
        ),
        "state": (
            doc: "Return the current device state",
            reply: Result(
                ok: (
                    type: "DeviceState",
                    recv: FromPrimitive("u8"),
                ),
                err: CLike("Ecp5Error"),
            ),
        ),

        "id": (
            doc: "Return the device id",
            reply: Result(
                ok: (type: "Id"),
                err: CLike("Ecp5Error"),
            ),
        ),

        "status": (
            doc: "Return the device status",
            reply: Result(
                ok: (
                    type: "u32",
                    recv: FromPrimitive("u32"),
                ),
                err: CLike("Ecp5Error"),
            ),
        ),

        "load_default_bitstream": (
            doc: "Load a bitstream",
            reply: Result(
                ok: "()",
                err: CLike("Ecp5Error"),
            ),
        ),
    },
)